{
  "name": "astro-site",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "prebuild": "mkdir -p public/docs && rsync -av --include='*/' --include='*.jpg' --include='*.jpeg' --include='*.png' --include='*.gif' --include='*.svg' --include='*.webp' --include='*.avif' --exclude='*' src/content/docs/ public/docs/",
    "build": "astro build && pagefind --site dist",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/sitemap": "^3.7.0",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.10",
    "mermaid": "^11.12.2",
    "rehype-katex": "^7.0.1",
    "remark-directive": "^4.0.0",
    "remark-math": "^6.0.0",
    "tailwindcss": "^4.1.18",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.4",
    "fast-check": "^4.5.3",
    "mdast-util-directive": "^3.1.0",
    "pagefind": "^1.4.0",
    "vitest": "^4.0.17",
    "zod": "^4.3.5"
  }
}
