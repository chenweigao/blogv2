{
  "name": "knowledge-wiki",
  "version": "1.0.0",
  "description": "Personal Knowledge Wiki - A documentation site for work and study notes",
  "type": "module",
  "scripts": {
    "dev": "vitepress dev docs",
    "build": "vitepress build docs",
    "preview": "vitepress preview docs",
    "serve": "vitepress serve docs",
    "timeline:generate": "node docs/.vitepress/utils/generateTimeline.js",
    "timeline:watch": "node docs/.vitepress/utils/watchTimeline.js",
    "timeline:watch:legacy": "nodemon --watch docs --ext md --ignore docs/.vitepress/data --exec \"npm run timeline:generate\"",
    "timeline:incremental": "node docs/.vitepress/utils/incrementalUpdate.js incremental",
    "timeline:full": "node docs/.vitepress/utils/incrementalUpdate.js full",
    "dev:watch": "concurrently \"npm run timeline:watch\" \"vitepress dev docs\"",
    "setup:hooks": "git config core.hooksPath .githooks && chmod +x .githooks/*",
    "lint:css": "stylelint \"docs/.vitepress/theme/**/*.css\"",
    "lint": "eslint . --ext .js,.cjs,.mjs,.ts,.vue",
    "lint:fix": "eslint . --ext .js,.cjs,.mjs,.ts,.vue --fix",
    "format": "prettier -w .",
    "prepare": "echo \"Use 'pnpm run setup:hooks' to enable .githooks\"",
    "lint:frontmatter": "node docs/.vitepress/utils/frontmatterLint.js",
    "images:optimize": "node docs/.vitepress/utils/generateResponsiveImages.js",
    "lint:links": "node docs/.vitepress/utils/linkCheck.js",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "assert:dist": "node docs/.vitepress/utils/assertDist.js"
  },
  "keywords": [
    "wiki",
    "documentation",
    "knowledge-base",
    "vitepress"
  ],
  "author": "weigaochen",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.0",
    "markdown-it-mathjax3": "^4.3.2",
    "mermaid": "^11.10.1",
    "nodemon": "^3.1.10",
    "vitepress": "^1.6.4",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.0",
    "eslint": "^9.11.0",
    "eslint-plugin-vue": "^9.26.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "prettier": "^3.3.2",
    "lint-staged": "^15.2.0",
    "vitest": "^1.6.0",
    "jsdom": "^24.1.0",
    "markdown-it": "^13.0.1"
  },
  "vitest": {
    "environment": "jsdom",
    "coverage": {
      "reporter": ["text", "lcov"],
      "lines": 70,
      "functions": 70,
      "branches": 60,
      "statements": 70
    }
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "markdown-it-mark": "^4.0.0",
    "prismjs": "^1.30.0",
    "reading-time-estimator": "^1.14.0",
    "shiki": "^3.9.2",
    "viewerjs": "^1.11.7",
    "vitepress-plugin-image-viewer": "^1.1.6",
    "vue": "^3.5.18",
    "web-vitals": "^3.5.0",
    "sharp": "^0.33.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0",
  "lint-staged": {
    "*.{js,ts,vue,mjs,cjs}": [
      "eslint --fix",
      "prettier -w"
    ],
    "*.{json,md,css,scss,less}": [
      "prettier -w"
    ]
  }
}