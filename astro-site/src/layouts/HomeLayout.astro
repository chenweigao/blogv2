---
import BaseLayout from './BaseLayout.astro';
import Navbar from '../components/layout/Navbar.astro';
import ThemeToggle from '../components/ui/ThemeToggle.astro';
import SearchModal from '../components/interactive/SearchModal.astro';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Knowledge Wiki',
  description = 'Personal Knowledge Base - Comprehensive documentation across Computer Science, Programming, AI, and System Architecture'
} = Astro.props;
---

<BaseLayout title={title} description={description}>
  <Navbar currentPath="/">
    <ThemeToggle slot="theme-toggle" />
  </Navbar>
  
  <SearchModal />
  
  <main id="main-content" class="pt-20">
    <slot />
  </main>
</BaseLayout>
