---
interface Props {
  currentPath?: string;
}

const { currentPath = Astro.url.pathname } = Astro.props;

const navLinks = [
  { href: '/blogv2/', label: '首页' },
  { href: '/blogv2/algorithms/', label: '算法' },
  { href: '/blogv2/computer-systems/', label: '系统' },
  { href: '/blogv2/programming-languages/', label: '编程语言' },
  { href: '/blogv2/artificial-intelligence/', label: 'AI' },
  { href: '/blogv2/development-tools/', label: '开发工具' },
];
---

<header class="fixed top-3 left-4 right-4 z-50 md:left-4 md:right-4">
  <nav 
    class="glass rounded-2xl px-4 py-3 flex items-center justify-between max-w-7xl mx-auto"
    aria-label="主导航"
  >
    <!-- Logo -->
    <a 
      href="/blogv2/" 
      class="flex items-center gap-2 text-[var(--color-text)] hover:text-[var(--color-primary)] transition-colors cursor-pointer"
    >
      <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
      </svg>
      <span class="font-semibold text-lg hidden sm:inline">Knowledge Wiki</span>
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-1">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'px-3 py-2 rounded-lg text-sm font-medium transition-colors cursor-pointer',
            currentPath.startsWith(link.href) && link.href !== '/blogv2/'
              ? 'bg-[var(--color-primary)]/10 text-[var(--color-primary)]'
              : 'text-[var(--color-text-muted)] hover:text-[var(--color-text)] hover:bg-[var(--color-bg-secondary)]'
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>

    <!-- Right side actions -->
    <div class="flex items-center gap-2">
      <!-- Search button -->
      <button
        id="search-trigger"
        class="p-2 rounded-lg text-[var(--color-text-muted)] hover:text-[var(--color-text)] hover:bg-[var(--color-bg-secondary)] transition-colors cursor-pointer"
        aria-label="搜索"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </button>

      <!-- Theme toggle placeholder -->
      <div id="theme-toggle-slot">
        <slot name="theme-toggle" />
      </div>

      <!-- GitHub link -->
      <a
        href="https://github.com"
        target="_blank"
        rel="noopener noreferrer"
        class="p-2 rounded-lg text-[var(--color-text-muted)] hover:text-[var(--color-text)] hover:bg-[var(--color-bg-secondary)] transition-colors cursor-pointer"
        aria-label="GitHub"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
        </svg>
      </a>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-trigger"
        class="md:hidden p-2 rounded-lg text-[var(--color-text-muted)] hover:text-[var(--color-text)] hover:bg-[var(--color-bg-secondary)] transition-colors cursor-pointer"
        aria-label="打开菜单"
        aria-expanded="false"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>
</header>

<style>
  /* Glassmorphism fallback */
  @supports not (backdrop-filter: blur(1px)) {
    nav.glass {
      background: var(--color-bg);
      opacity: 0.98;
    }
  }
  
  /* Dark mode adjustments */
  :global(.dark) nav.glass {
    --glass-opacity: 0.85;
  }
</style>
