---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/layout/Navbar.astro';
import ThemeToggle from '../components/ui/ThemeToggle.astro';
---

<BaseLayout title="页面未找到" description="请求的页面不存在">
  <Navbar currentPath="/404/">
    <ThemeToggle slot="theme-toggle" />
  </Navbar>

  <main class="pt-20 px-4 min-h-[80vh] flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-9xl font-bold text-[var(--color-primary)] mb-4">404</h1>
      <h2 class="text-2xl font-semibold text-[var(--color-text)] mb-4">
        页面未找到
      </h2>
      <p class="text-[var(--color-text-muted)] mb-8 max-w-md mx-auto">
        抱歉，您请求的页面不存在。可能已被移动或删除。
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a 
          href="/blogv2/"
          class="px-6 py-3 bg-[var(--color-primary)] text-white rounded-lg font-medium hover:bg-[var(--color-primary-dark)] transition-colors cursor-pointer"
        >
          返回首页
        </a>
        <button
          onclick="history.back()"
          class="px-6 py-3 glass rounded-lg font-medium text-[var(--color-text)] hover:bg-[var(--color-bg-secondary)] transition-colors cursor-pointer"
        >
          返回上一页
        </button>
      </div>
    </div>
  </main>
</BaseLayout>
