---
import HomeLayout from '../layouts/HomeLayout.astro';
import { getCollection } from 'astro:content';

// Get recent articles
const allDocs = await getCollection('docs');
const recentDocs = allDocs
  .filter(doc => doc.data.date)
  .sort((a, b) => {
    const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
    const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
    return dateB - dateA;
  })
  .slice(0, 6);

const features = [
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>`,
    title: '算法与数据结构',
    description: '排序、搜索、图算法、动态规划和复杂度分析的全面覆盖',
    href: '/blogv2/algorithms/',
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>`,
    title: '计算机系统',
    description: '深入了解 CPU/GPU 架构、操作系统、内存管理和性能优化',
    href: '/blogv2/computer-systems/',
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>`,
    title: '编程语言',
    description: 'Java、Python、JVM 内部原理、语言特性和最佳实践',
    href: '/blogv2/programming-languages/',
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>`,
    title: '人工智能',
    description: 'GPU 计算、分布式训练、性能分析和训练框架',
    href: '/blogv2/artificial-intelligence/',
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>`,
    title: '开发工具',
    description: '云服务、数据库、框架、前端开发和网络编程',
    href: '/blogv2/development-tools/',
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" /></svg>`,
    title: '研究项目',
    description: '学术论文、研究项目和实验记录',
    href: '/blogv2/research-projects/',
  },
];
---

<HomeLayout>
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-primary)]/10 via-transparent to-[var(--color-secondary)]/10"></div>
    
    <div class="relative max-w-6xl mx-auto px-4 py-24 md:py-32">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-[var(--color-text)] mb-6">
          Knowledge Wiki
        </h1>
        <p class="text-xl md:text-2xl text-[var(--color-text-muted)] mb-8 max-w-2xl mx-auto">
          个人知识库 - 涵盖计算机科学、编程、人工智能和系统架构的综合文档
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a 
            href="/blogv2/algorithms/"
            class="px-6 py-3 bg-[var(--color-primary)] text-white rounded-lg font-medium hover:bg-[var(--color-primary-dark)] transition-colors cursor-pointer"
          >
            开始探索
          </a>
          <a 
            href="/blogv2/timeline/"
            class="px-6 py-3 glass rounded-lg font-medium text-[var(--color-text)] hover:bg-[var(--color-bg-secondary)] transition-colors cursor-pointer"
          >
            查看时间线
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-2xl font-bold text-[var(--color-text)] text-center mb-12">
        知识领域
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {features.map(feature => (
          <a 
            href={feature.href}
            class="glass rounded-2xl p-6 hover:shadow-lg transition-all cursor-pointer group"
          >
            <div class="text-[var(--color-primary)] mb-4 group-hover:scale-110 transition-transform" set:html={feature.icon} />
            <h3 class="text-lg font-semibold text-[var(--color-text)] mb-2 group-hover:text-[var(--color-primary)] transition-colors">
              {feature.title}
            </h3>
            <p class="text-[var(--color-text-muted)] text-sm">
              {feature.description}
            </p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Recent Articles -->
  {recentDocs.length > 0 && (
    <section class="py-16 px-4 bg-[var(--color-bg-secondary)]">
      <div class="max-w-6xl mx-auto">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-bold text-[var(--color-text)]">
            最近更新
          </h2>
          <a 
            href="/blogv2/timeline/"
            class="text-[var(--color-primary)] hover:underline cursor-pointer"
          >
            查看全部 →
          </a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {recentDocs.map(doc => (
            <a 
              href={`/blogv2/${doc.id}/`}
              class="bg-[var(--color-bg)] rounded-xl p-5 hover:shadow-lg transition-shadow cursor-pointer"
            >
              <h3 class="font-medium text-[var(--color-text)] mb-2 hover:text-[var(--color-primary)] transition-colors">
                {doc.data.title || doc.id.split('/').pop()}
              </h3>
              {doc.data.description && (
                <p class="text-sm text-[var(--color-text-muted)] line-clamp-2 mb-3">
                  {doc.data.description}
                </p>
              )}
              <time 
                datetime={doc.data.date?.toISOString()}
                class="text-xs text-[var(--color-text-muted)]"
              >
                {doc.data.date?.toLocaleDateString('zh-CN')}
              </time>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Footer -->
  <footer class="py-8 px-4 border-t border-[var(--color-border)]">
    <div class="max-w-6xl mx-auto text-center text-sm text-[var(--color-text-muted)]">
      <p>Built with Astro • Powered by Glassmorphism</p>
    </div>
  </footer>
</HomeLayout>
