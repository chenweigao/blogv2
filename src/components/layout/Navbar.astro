---
interface Props {
  currentPath?: string;
}

const { currentPath = Astro.url.pathname } = Astro.props;

const navLinks = [
  { href: '/', label: '首页', exact: true },
  { href: '/ai-systems/', label: 'AI 系统' },
  { href: '/architecture/', label: '计算机架构' },
  { href: '/fundamentals/', label: '编程基础' },
  { href: '/toolbox/', label: '工具箱' },
];

// Find active index
const activeIndex = navLinks.findIndex((link) => {
  if (link.exact) return currentPath === link.href;
  return currentPath.startsWith(link.href);
});
---

<header class="fixed top-3 left-4 right-4 z-50">
  <nav 
    class="glass rounded-2xl px-4 py-3 flex items-center justify-between max-w-7xl mx-auto"
    aria-label="主导航"
  >
    <!-- Logo -->
    <a 
      href="/" 
      class="nav-logo flex items-center gap-2 cursor-pointer"
    >
      <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
      </svg>
      <span class="nav-logo-text hidden sm:inline">Knowledge Wiki</span>
    </a>

    <!-- Desktop Navigation - Pure Apple style (no background indicator) -->
    <div class="hidden md:block">
      <div class="nav-container">
        {navLinks.map((link, index) => {
          const isActive = link.exact 
            ? currentPath === link.href 
            : currentPath.startsWith(link.href);
          return (
            <a
              href={link.href}
              data-nav-index={index}
              class:list={[
                'nav-link',
                isActive && 'is-active'
              ]}
              aria-current={isActive ? 'page' : undefined}
            >
              {link.label}
            </a>
          );
        })}
      </div>
    </div>

    <!-- Right side actions -->
    <div class="flex items-center gap-1 relative z-10">
      <!-- Search button -->
      <button
        id="search-trigger"
        class="nav-action-btn"
        aria-label="搜索"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <kbd class="nav-kbd hidden sm:inline-flex">
          <span>⌘</span>K
        </kbd>
      </button>

      <!-- Theme toggle -->
      <div id="theme-toggle-slot">
        <slot name="theme-toggle" />
      </div>

      <!-- GitHub link -->
      <a
        href="https://github.com"
        target="_blank"
        rel="noopener noreferrer"
        class="nav-icon-btn"
        aria-label="GitHub"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
        </svg>
      </a>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-trigger"
        class="nav-icon-btn md:hidden"
        aria-label="打开菜单"
        aria-expanded="false"
        type="button"
      >
        <svg class="w-5 h-5 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>
</header>

<script>
  // No indicator animation needed - pure text-based navigation
  // Just handle Astro page transitions
  function initNav() {
    const links = document.querySelectorAll('.nav-link');
    if (!links.length) return;
    
    // Handle window resize for any layout adjustments
    let resizeTimeout: ReturnType<typeof setTimeout>;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        // Force repaint if needed
      }, 100);
    });
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initNav);
  } else {
    initNav();
  }
  document.addEventListener('astro:after-swap', initNav);
</script>

<style>
  /* ============================================
     Navigation - Pure Apple Style
     ============================================ */
  
  /* Logo */
  .nav-logo {
    color: #1D1D1F;
    transition: opacity 200ms ease;
  }
  
  .nav-logo:hover {
    opacity: 0.7;
  }
  
  .nav-logo-text {
    font-size: 1.125rem;
    font-weight: 600;
    letter-spacing: -0.02em;
  }
  
  :global(.dark) .nav-logo {
    color: #F5F5F7;
  }
  
  /* Navigation Container - No background */
  .nav-container {
    display: flex;
    align-items: center;
    gap: 4px;
  }
  
  /* Navigation Links - Apple style: text only, no backgrounds */
  .nav-link {
    position: relative;
    padding: 8px 14px;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: -0.01em;
    white-space: nowrap;
    cursor: pointer;
    transition: color 200ms ease;
    -webkit-tap-highlight-color: transparent;
    
    /* Light mode - muted gray */
    color: #86868B;
  }
  
  .nav-link:hover {
    color: #1D1D1F;
  }
  
  .nav-link.is-active {
    color: #1D1D1F;
    font-weight: 600;
  }
  
  /* Dark mode */
  :global(.dark) .nav-link {
    color: #A1A1A6;
  }
  
  :global(.dark) .nav-link:hover {
    color: #F5F5F7;
  }
  
  :global(.dark) .nav-link.is-active {
    color: #F5F5F7;
  }
  
  /* Action Buttons */
  .nav-action-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 12px;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: color 200ms ease;
    color: #86868B;
  }
  
  .nav-action-btn:hover {
    color: #1D1D1F;
  }
  
  :global(.dark) .nav-action-btn {
    color: #A1A1A6;
  }
  
  :global(.dark) .nav-action-btn:hover {
    color: #F5F5F7;
  }
  
  /* Icon Buttons */
  .nav-icon-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8px;
    border-radius: 8px;
    cursor: pointer;
    transition: color 200ms ease;
    color: #86868B;
  }
  
  .nav-icon-btn:hover {
    color: #1D1D1F;
  }
  
  :global(.dark) .nav-icon-btn {
    color: #A1A1A6;
  }
  
  :global(.dark) .nav-icon-btn:hover {
    color: #F5F5F7;
  }
  
  /* Keyboard Shortcut Badge */
  .nav-kbd {
    display: inline-flex;
    align-items: center;
    gap: 2px;
    padding: 2px 6px;
    font-size: 11px;
    font-weight: 500;
    font-family: var(--font-sans);
    letter-spacing: 0;
    border-radius: 4px;
    background-color: rgba(0, 0, 0, 0.06);
    color: #86868B;
    border: 1px solid rgba(0, 0, 0, 0.08);
  }
  
  :global(.dark) .nav-kbd {
    background-color: rgba(255, 255, 255, 0.08);
    color: #A1A1A6;
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .nav-link,
    .nav-action-btn,
    .nav-icon-btn,
    .nav-logo {
      transition: none !important;
    }
  }
  
  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .nav-link {
      color: #000;
    }
    
    .nav-link.is-active {
      text-decoration: underline;
      text-underline-offset: 4px;
    }
    
    :global(.dark) .nav-link {
      color: #fff;
    }
  }
</style>
