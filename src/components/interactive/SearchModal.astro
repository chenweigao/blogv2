---
// Search modal component using Pagefind
---

<div 
  id="search-modal" 
  class="fixed inset-0 z-50 hidden"
  role="dialog"
  aria-modal="true"
  aria-label="搜索"
>
  <!-- Backdrop -->
  <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" id="search-backdrop"></div>
  
  <!-- Modal content -->
  <div class="relative flex items-start justify-center pt-[10vh] px-4">
    <div class="w-full max-w-2xl bg-[var(--color-bg)] rounded-2xl shadow-2xl overflow-hidden">
      <!-- Search input -->
      <div class="p-4 border-b border-[var(--color-border)]">
        <div class="relative">
          <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-[var(--color-text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <input
            type="text"
            id="search-input"
            class="w-full pl-10 pr-4 py-3 bg-[var(--color-bg-secondary)] border border-[var(--color-border)] rounded-lg text-[var(--color-text)] placeholder-[var(--color-text-muted)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]"
            placeholder="搜索文档..."
            autocomplete="off"
          />
          <kbd class="absolute right-3 top-1/2 -translate-y-1/2 px-2 py-1 text-xs bg-[var(--color-bg)] border border-[var(--color-border)] rounded text-[var(--color-text-muted)]">
            ESC
          </kbd>
        </div>
      </div>

      <!-- Results -->
      <div id="search-results" class="max-h-[60vh] overflow-y-auto p-2">
        <div class="search-empty p-8 text-center text-[var(--color-text-muted)]">
          输入关键词开始搜索
        </div>
        <div class="search-loading hidden p-8 text-center text-[var(--color-text-muted)]">
          <svg class="animate-spin w-5 h-5 mx-auto mb-2" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          搜索中...
        </div>
        <div class="search-no-results hidden p-8 text-center text-[var(--color-text-muted)]">
          未找到相关结果
        </div>
        <ul class="search-results-list hidden space-y-1"></ul>
      </div>

      <!-- Footer -->
      <div class="p-3 border-t border-[var(--color-border)] flex items-center justify-between text-xs text-[var(--color-text-muted)]">
        <div class="flex items-center gap-4">
          <span class="flex items-center gap-1">
            <kbd class="px-1.5 py-0.5 bg-[var(--color-bg-secondary)] border border-[var(--color-border)] rounded">↑</kbd>
            <kbd class="px-1.5 py-0.5 bg-[var(--color-bg-secondary)] border border-[var(--color-border)] rounded">↓</kbd>
            导航
          </span>
          <span class="flex items-center gap-1">
            <kbd class="px-1.5 py-0.5 bg-[var(--color-bg-secondary)] border border-[var(--color-border)] rounded">Enter</kbd>
            选择
          </span>
        </div>
        <span>Powered by Pagefind</span>
      </div>
    </div>
  </div>
</div>

<script>
  let pagefind: any = null;
  let selectedIndex = 0;
  let isInitialized = false;

  async function loadPagefind() {
    if (pagefind) return pagefind;
    
    try {
      // Try multiple paths for pagefind
      const basePath = (document.querySelector('base')?.href || window.location.origin).replace(/\/$/, '');
      const paths = [
        '/pagefind/pagefind.js',
        './pagefind/pagefind.js',
        `${basePath}/pagefind/pagefind.js`
      ];
      
      for (const path of paths) {
        try {
          // Use dynamic script loading instead of import
          const fullPath = path.startsWith('http') ? path : `${window.location.origin}${path}`;
          pagefind = await import(/* @vite-ignore */ fullPath);
          if (pagefind) {
            await pagefind.init();
            console.log('Pagefind loaded successfully from:', path);
            return pagefind;
          }
        } catch (e) {
          // Try next path
        }
      }
      
      console.warn('Pagefind not available. Run "npm run build" first to generate search index.');
      return null;
    } catch (e) {
      console.warn('Pagefind loading failed:', e);
      return null;
    }
  }

  async function initSearch() {
    if (isInitialized) return;
    
    const modal = document.getElementById('search-modal');
    const backdrop = document.getElementById('search-backdrop');
    const input = document.getElementById('search-input') as HTMLInputElement;
    const trigger = document.getElementById('search-trigger');
    const resultsContainer = document.getElementById('search-results');

    if (!modal || !input || !resultsContainer) return;

    isInitialized = true;

    function openModal() {
      modal.classList.remove('hidden');
      input.focus();
      document.body.style.overflow = 'hidden';
      // Load pagefind when modal opens (lazy load)
      loadPagefind();
    }

    function closeModal() {
      modal.classList.add('hidden');
      input.value = '';
      document.body.style.overflow = '';
      showEmpty();
    }

    function showEmpty() {
      resultsContainer.querySelector('.search-empty')?.classList.remove('hidden');
      resultsContainer.querySelector('.search-loading')?.classList.add('hidden');
      resultsContainer.querySelector('.search-no-results')?.classList.add('hidden');
      resultsContainer.querySelector('.search-results-list')?.classList.add('hidden');
    }

    function showLoading() {
      resultsContainer.querySelector('.search-empty')?.classList.add('hidden');
      resultsContainer.querySelector('.search-loading')?.classList.remove('hidden');
      resultsContainer.querySelector('.search-no-results')?.classList.add('hidden');
      resultsContainer.querySelector('.search-results-list')?.classList.add('hidden');
    }

    function showNoResults() {
      resultsContainer.querySelector('.search-empty')?.classList.add('hidden');
      resultsContainer.querySelector('.search-loading')?.classList.add('hidden');
      resultsContainer.querySelector('.search-no-results')?.classList.remove('hidden');
      resultsContainer.querySelector('.search-results-list')?.classList.add('hidden');
    }

    function showResults(results: any[]) {
      resultsContainer.querySelector('.search-empty')?.classList.add('hidden');
      resultsContainer.querySelector('.search-loading')?.classList.add('hidden');
      resultsContainer.querySelector('.search-no-results')?.classList.add('hidden');
      
      const list = resultsContainer.querySelector('.search-results-list');
      if (!list) return;
      
      list.classList.remove('hidden');
      list.innerHTML = results.map((result, i) => `
        <li>
          <a 
            href="${result.url}" 
            class="block p-3 rounded-lg hover:bg-[var(--color-bg-secondary)] transition-colors ${i === selectedIndex ? 'bg-[var(--color-bg-secondary)]' : ''}"
            data-index="${i}"
          >
            <div class="font-medium text-[var(--color-text)]">${result.meta?.title || 'Untitled'}</div>
            <div class="text-sm text-[var(--color-text-muted)] mt-1 line-clamp-2">${result.excerpt || ''}</div>
          </a>
        </li>
      `).join('');
    }

    // Event listeners
    trigger?.addEventListener('click', openModal);
    backdrop?.addEventListener('click', closeModal);

    // Keyboard shortcuts
    document.addEventListener('keydown', (e) => {
      // Cmd/Ctrl + K to open
      if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
        e.preventDefault();
        openModal();
      }
      
      // Escape to close
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
        closeModal();
      }
    });

    // Search input
    let debounceTimer: number;
    input.addEventListener('input', () => {
      clearTimeout(debounceTimer);
      const query = input.value.trim();
      
      if (!query) {
        showEmpty();
        return;
      }

      showLoading();
      
      debounceTimer = window.setTimeout(async () => {
        if (!pagefind) {
          showNoResults();
          return;
        }

        try {
          const search = await pagefind.search(query);
          const results = await Promise.all(
            search.results.slice(0, 10).map((r: any) => r.data())
          );
          
          if (results.length === 0) {
            showNoResults();
          } else {
            selectedIndex = 0;
            showResults(results);
          }
        } catch (e) {
          console.error('Search error:', e);
          showNoResults();
        }
      }, 200);
    });

    // Keyboard navigation
    input.addEventListener('keydown', (e) => {
      const list = resultsContainer.querySelector('.search-results-list');
      const items = list?.querySelectorAll('a') || [];
      
      if (e.key === 'ArrowDown') {
        e.preventDefault();
        selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
        updateSelection(items);
      } else if (e.key === 'ArrowUp') {
        e.preventDefault();
        selectedIndex = Math.max(selectedIndex - 1, 0);
        updateSelection(items);
      } else if (e.key === 'Enter' && items[selectedIndex]) {
        e.preventDefault();
        (items[selectedIndex] as HTMLAnchorElement).click();
      }
    });

    function updateSelection(items: NodeListOf<Element>) {
      items.forEach((item, i) => {
        item.classList.toggle('bg-[var(--color-bg-secondary)]', i === selectedIndex);
      });
      items[selectedIndex]?.scrollIntoView({ block: 'nearest' });
    }
  }

  initSearch();
  document.addEventListener('astro:after-swap', () => {
    isInitialized = false;
    initSearch();
  });
</script>
