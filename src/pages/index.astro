---
import HomeLayout from '../layouts/HomeLayout.astro';
import { getCollection } from 'astro:content';

// Get recent articles
const allDocs = await getCollection('docs');
const recentDocs = allDocs
  .filter(doc => doc.data.date)
  .sort((a, b) => {
    const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
    const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
    return dateB - dateA;
  })
  .slice(0, 6);

const features = [
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>`,
    title: 'AI 系统',
    description: 'GPU 计算、分布式训练、Profiling、框架',
    href: '/ai-systems/',
    gradient: 'from-emerald-500 to-teal-500',
    count: allDocs.filter(d => d.id.startsWith('ai-systems/')).length,
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>`,
    title: '计算机架构',
    description: 'CPU/GPU 微架构、Linux 内核、内存系统',
    href: '/architecture/',
    gradient: 'from-purple-500 to-pink-500',
    count: allDocs.filter(d => d.id.startsWith('architecture/')).length,
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>`,
    title: '编程基础',
    description: '算法、数据结构、Python、Java',
    href: '/fundamentals/',
    gradient: 'from-amber-500 to-orange-500',
    count: allDocs.filter(d => d.id.startsWith('fundamentals/')).length,
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>`,
    title: '工具箱',
    description: '开发工具、数据库、框架、研究项目',
    href: '/toolbox/',
    gradient: 'from-rose-500 to-red-500',
    count: allDocs.filter(d => d.id.startsWith('toolbox/')).length,
  },
];
---

<HomeLayout>
  <div class="page-content">
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <!-- Subtle gradient orbs -->
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-[var(--color-primary)]/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-[var(--color-secondary)]/10 rounded-full blur-3xl"></div>
    
    <div class="relative max-w-5xl mx-auto px-4 py-20 md:py-28">
      <div class="text-center">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full 
                    bg-[var(--color-bg-secondary)] border border-[var(--color-border)]
                    text-xs font-medium text-[var(--color-text-muted)] mb-6">
          <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse"></span>
          持续更新中
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-[var(--color-text)] mb-6 tracking-tight">
          Knowledge Wiki
        </h1>
        <p class="text-lg md:text-xl text-[var(--color-text-muted)] mb-10 max-w-2xl mx-auto leading-relaxed">
          个人知识库 — 涵盖计算机科学、编程、人工智能和系统架构的综合文档
        </p>
        
        <div class="flex flex-wrap justify-center gap-3">
          <a 
            href="/algorithms/"
            class="group inline-flex items-center gap-2 px-5 py-2.5 
                   bg-[var(--color-text)] text-[var(--color-bg)] 
                   rounded-full font-medium text-sm
                   hover:opacity-90 transition-opacity cursor-pointer"
          >
            开始探索
            <svg class="w-4 h-4 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a 
            href="/timeline/"
            class="inline-flex items-center gap-2 px-5 py-2.5 
                   bg-[var(--color-bg-secondary)] text-[var(--color-text)]
                   border border-[var(--color-border)]
                   rounded-full font-medium text-sm
                   hover:bg-[var(--color-bg-secondary)]/80 transition-colors cursor-pointer"
          >
            查看时间线
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 px-4">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-2xl font-bold text-[var(--color-text)] mb-3">
          知识领域
        </h2>
        <p class="text-[var(--color-text-muted)]">
          探索不同领域的技术文档和学习笔记
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {features.map((feature, index) => (
          <a 
            href={feature.href}
            class="group relative overflow-hidden rounded-2xl p-6
                   bg-[var(--color-bg)] hover:bg-[var(--color-bg-secondary)]/50
                   border border-[var(--color-border)] hover:border-[var(--color-border)]
                   shadow-sm hover:shadow-lg
                   transition-all duration-300 cursor-pointer"
            style={`animation-delay: ${index * 50}ms`}
          >
            <!-- Gradient hover effect -->
            <div class={`absolute inset-0 bg-gradient-to-br ${feature.gradient} opacity-0 group-hover:opacity-5 transition-opacity duration-300`}></div>
            
            <div class="relative">
              <!-- Icon with gradient background -->
              <div class={`inline-flex p-2.5 rounded-xl bg-gradient-to-br ${feature.gradient} text-white mb-4
                          group-hover:scale-105 transition-transform duration-300`} 
                   set:html={feature.icon} />
              
              <div class="flex items-start justify-between gap-2">
                <div>
                  <h3 class="font-semibold text-[var(--color-text)] mb-1.5 
                             group-hover:text-[var(--color-primary)] transition-colors">
                    {feature.title}
                  </h3>
                  <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">
                    {feature.description}
                  </p>
                </div>
              </div>
              
              <!-- Article count -->
              <div class="mt-4 pt-4 border-t border-[var(--color-border)]/50 
                          flex items-center justify-between">
                <span class="text-xs text-[var(--color-text-muted)]">
                  {feature.count} 篇文章
                </span>
                <div class="w-6 h-6 rounded-full flex items-center justify-center
                            bg-[var(--color-bg-secondary)] group-hover:bg-[var(--color-primary)]
                            transition-all duration-200">
                  <svg class="w-3 h-3 text-[var(--color-text-muted)] group-hover:text-white 
                              transform group-hover:translate-x-0.5 transition-all duration-200" 
                       fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Recent Articles -->
  {recentDocs.length > 0 && (
    <section class="py-16 px-4">
      <div class="max-w-5xl mx-auto">
        <div class="flex items-center justify-between mb-8">
          <div>
            <h2 class="text-2xl font-bold text-[var(--color-text)] mb-1">
              最近更新
            </h2>
            <p class="text-sm text-[var(--color-text-muted)]">
              最新发布和更新的文章
            </p>
          </div>
          <a 
            href="/timeline/"
            class="group inline-flex items-center gap-1.5 text-sm font-medium
                   text-[var(--color-text-muted)] hover:text-[var(--color-primary)] 
                   transition-colors cursor-pointer"
          >
            查看全部
            <svg class="w-4 h-4 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {recentDocs.map((doc, index) => (
            <a 
              href={`/${doc.id}/`}
              class="group p-5 rounded-xl
                     bg-[var(--color-bg-secondary)]/50 hover:bg-[var(--color-bg-secondary)]
                     border border-transparent hover:border-[var(--color-border)]
                     transition-all duration-200 cursor-pointer"
              style={`animation-delay: ${index * 50}ms`}
            >
              <div class="flex items-start justify-between gap-3 mb-3">
                <h3 class="font-medium text-[var(--color-text)] 
                           group-hover:text-[var(--color-primary)] 
                           transition-colors line-clamp-2">
                  {doc.data.title || doc.id.split('/').pop()}
                </h3>
              </div>
              
              {doc.data.description && (
                <p class="text-sm text-[var(--color-text-muted)] line-clamp-2 mb-4">
                  {doc.data.description}
                </p>
              )}
              
              <div class="flex items-center justify-between">
                <time 
                  datetime={doc.data.date?.toISOString()}
                  class="text-xs text-[var(--color-text-muted)] font-mono"
                >
                  {doc.data.date?.toLocaleDateString('zh-CN', { month: 'short', day: 'numeric', year: 'numeric' })}
                </time>
                <span class="text-xs text-[var(--color-text-muted)] px-2 py-0.5 rounded-md bg-[var(--color-bg)]">
                  {doc.id.split('/')[0]}
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Footer -->
  <footer class="py-10 px-4 border-t border-[var(--color-border)]">
    <div class="max-w-5xl mx-auto flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-sm text-[var(--color-text-muted)]">
        Built with Astro
      </p>
      <div class="flex items-center gap-4">
        <a href="/timeline/" class="text-sm text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors cursor-pointer">
          时间线
        </a>
        <span class="text-[var(--color-border)]">·</span>
        <a href="https://github.com" class="text-sm text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors cursor-pointer">
          GitHub
        </a>
      </div>
    </div>
  </footer>
  </div>
</HomeLayout>

<style>
  @keyframes fadeSlideIn {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  section a[style*="animation-delay"] {
    animation: fadeSlideIn 0.5s ease-out both;
  }
  
  @media (prefers-reduced-motion: reduce) {
    section a[style*="animation-delay"] {
      animation: none;
    }
  }
</style>
